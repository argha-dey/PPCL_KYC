            android:allowBackup="false"
            android:icon="@mipmap/applogo"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning"
            tools:targetApi="n">
        <activity
                android:name=".patientModuleActivity.FacebookTestingActivity"
                android:label="@string/title_activity_facebook_testing"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".patientModuleActivity.MemberShipFacilityBookingActivity">
        </activity>
        <activity android:name=".patientModuleActivity.HelloHealthPackageBookingActivity">
        </activity>
        <activity android:name=".patientModuleActivity.UserProfileActivity">
        </activity>
        <activity android:name=".patientModuleActivity.RegistrationActivity">
        </activity>
        <activity
                android:name=".patientModuleActivity.LoginActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".patientModuleActivity.BaseActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".patientModuleActivity.HomeActivity"
