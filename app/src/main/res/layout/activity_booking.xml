<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

    <LinearLayout
            android:background="@color/design_default_color_primary_dark"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ImageView
                android:onClick="onBackConfirmClick"
                android:layout_gravity="center"
                android:src="@drawable/arrow_white"
                android:background="?attr/selectableItemBackground"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
android:layout_marginLeft="10dp"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="center|left"
                android:textSize="18sp"
                android:text="Confirm Appointment"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:layout_weight="22"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:src="@drawable/profile_image"
                android:layout_weight="2"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/doctor_name"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:text="Dr.Bhalandu Vaisanav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:maxLines="1"
                    android:id="@+id/doctor_spl_depart"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:maxLines="1"
                    android:id="@+id/doctor_spl"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:text="MD (Medicine)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/doctor_exp"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:text="Exp : 29 years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View android:background="@color/gray_color"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="18"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:text="Shree Krishna Hospital and Medical Research Center, Gokal Nagar, Karamsad - 388 325 Gujarat, INDIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>
    <View android:background="@color/gray_color"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Time and Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/tv_time_date"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>
    <View android:background="@color/gray_color"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Booking for"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
               android:background="@drawable/border_orange_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <TextView
                        android:textColor="@color/colorBlack"
                        android:gravity="center|right"
                        android:textSize="14sp"
                        android:text="Name   :"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />

                <TextView
                        android:id="@+id/user_name"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:textSize="14sp"

                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <TextView
                        android:textColor="@color/colorBlack"
                        android:gravity="center|right"
                        android:textSize="14sp"
                        android:text="Mobile  :"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />

                <TextView
                        android:id="@+id/mobile_number"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:textSize="14sp"

                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <TextView
                        android:textColor="@color/colorBlack"
                        android:gravity="center|right"
                        android:textSize="14sp"
                        android:text="Email   :"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />

                <TextView
                        android:id="@+id/user_email"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:textSize="14sp"

                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="Referred By"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/tv_referred_by_person"

            android:paddingLeft="8dp"

                        android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_green_box"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

</LinearLayout>
    <View android:background="@color/gray_color"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="10dp"/>
    <LinearLayout

            android:orientation="horizontal"
            android:background="@color/colorGreyMaxLight"
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/checked"
                android:layout_weight="1.5"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        <TextView
                android:gravity="center|left"
                android:textSize="12sp"
                android:text="I Agree to the Terms and Condition"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/maic_icon"
                android:layout_weight="2.5"
                android:layout_width="4dp"
                android:layout_height="48dp" />

    </LinearLayout>


    <LinearLayout
            android:onClick="onConfirmBooking"
            android:background="@color/colorPrimary"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:text="CONFIRM BOOK"
                android:textColor="@color/colorGreen"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>