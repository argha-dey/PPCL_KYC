<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#283682"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main.collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"

        >

            <LinearLayout
                    app:layout_collapseMode="parallax"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    <LinearLayout
                            android:onClick="onHealthRecordHealingTree"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/healthrecords"
                                android:padding="10dp"/>


                        <TextView
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/health_records_healing_tree"
                                android:lines="2"
                                android:padding="5dp"
                                android:textColor="@android:color/white"/>

                    </LinearLayout>
                    <LinearLayout
                            android:onClick="onLocationHealingTree"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/located"
                                android:padding="10dp"/>


                        <TextView
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/locate_healing_tree"
                                android:padding="5dp"
                                android:textColor="@android:color/white"/>

                    </LinearLayout>
                    <!--<LinearLayout
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom">
                        <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/onehealingtree"
                                android:padding="10dp"/>


                        <TextView
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="One healing tree Membership"
                                android:padding="5dp"
                                android:textColor="@android:color/white"/>

                    </LinearLayout>-->

                </LinearLayout>
            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        android:gravity="center|right"
                        android:text="The Healing Tree world of "
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="50dp"/>
                <TextView
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center|left"
                        android:text="Care"
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:layout_height="50dp"/>
                <ImageView

                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"/>

            </LinearLayout>

            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:id="@+id/bankcardId"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="0dp">
                    <LinearLayout

                            android:onClick="bookDoctorAppointment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                            <ImageView

                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/book_appointent"
                            />
                        </LinearLayout>
                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Book on
                                Appointment"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="1dp">
                    <LinearLayout

                            android:onClick="onOrderMedicines"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/oder_medicines"
                        />
                        </LinearLayout>

                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Order
                                Medicines"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="0dp">
                    <LinearLayout

                            android:onClick="onHealthLibrary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                        <ImageView

                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/health_library"
                        />
                        </LinearLayout>

                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Health
                                Library"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="0dp">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:onClick="onBookHealthCheck">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/hello_health"
                        />
                        </LinearLayout>

                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Hello health"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="1dp"
                        android:onClick="OneHealingTreeMembershipClick">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                        <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/privilege_club_membership"
                        />
                        </LinearLayout>

                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Privilege Club
                                Membership"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="130dp"
                        android:layout_margin="0dp">
                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:onClick="onHealingHomeCareClick">
                        <LinearLayout
                                android:gravity="center"
                                android:background="@drawable/border_green_box"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                        <ImageView

                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/home_health_care"
                        />
                        </LinearLayout>

                        <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Home
                                Health care"
                                android:padding="5dp"
                                android:textColor="@color/colorPrimary"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View android:background="@color/colorWhite"
                  android:layout_width="match_parent"
                  android:layout_height="8dp"/>

            <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="170dp"
                        android:layout_margin="1dp">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/diy"
                            android:padding="10dp"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="170dp"
                        android:layout_margin="1dp"
                >

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/women"
                            android:padding="10dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>







</android.support.design.widget.CoordinatorLayout>