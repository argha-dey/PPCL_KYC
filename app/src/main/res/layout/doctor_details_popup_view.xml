<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorGreyMaxLight"
              android:padding="8dp"
              android:layout_gravity="center">
    <TextView
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circleable_backgrount"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
        <TextView
                android:id="@+id/doctor_name_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. A.K Dutta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Department"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_department_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Specialist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_specialist_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Qualification"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_qualification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textStyle="bold"
                    android:text="Experience"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_exp_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Doctor Fees"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_fees_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>


        <LinearLayout

                android:layout_marginTop="10dp"
                android:background="@color/colorGreyLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Location"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/doctor_location_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>